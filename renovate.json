{
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "fileMatch": ["(^|/)Dockerfile.php$"],
      "matchStrings": ["FROM (?<depName>.*?):(?<currentValue>.*)"],
      "datasourceTemplate": "docker",
      "versioningTemplate": "regex"
    }
  ],
  "packageRules": [
    {
      "datasources": ["docker"],
      "packageNames": ["amazeeio/php"],
      "versioning": "regex:^(?<compatibility>.*)-v(?<major>\\d+)(\\.(?<minor>\\d+))?(\\.(?<patch>\\d+))?$"
    }
  ]
}
